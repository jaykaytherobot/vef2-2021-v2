    <input class="<%= formInfo.ssn_invalid ? 'invalid':'valid'%>"type="text" name="ssn" placeholder="000000-0000" value="<%= formInfo.ssn %>" required><br>
    <label for="athugsemdir">Athugasemd:</label>
    <textarea name="athugasemdir" cols="50" rows="10">
    </textarea>
    <label for="ekkibirta">Ekki birta nafn รก lista</label>
    <input type="checkbox" name="ekkibirta"/><br>
    <button>Skrifa undir</button>
  </form>
</html>
